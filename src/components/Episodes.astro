---
import Indexcard from './Indexcard.astro';
import { main } from '../utils/app.js';
const episodes = await main();


---

<container class=" flex flex-wrap items-center justify-between mx-auto p-4">
    <p class="text-4xl font-bold my-6 sm:text-6xl p-6 text-center w-screen text-slate-900">
        Recent Episodes
    </p>
    <div class="text-white mx-auto grid grid-cols-1 sm:grid-cols-3 gap-6"> 
        {episodes.slice(0,6).map(episode => (
                <Indexcard 
                href={`/episodes/${episode.id}`} 
                title={episode.name} 
                body={episode.description.slice(0,145)+'...'}
                img={episode.images[0].url}/>
        ))    
        }       
        </div>

</container>