---
export interface Props {
	title: string;
	body: string;
	href: string;
    img: string;
}

const { href, img, title, body } = Astro.props;

---



<div class="max-w-sm  border border-gray-200 rounded-lg shadow bg-slate-900 dark:border-gray-700">
    <a href={href}>
        <img class="rounded-t-lg" src={img} alt="podcast cover image" />
    </a>
    <div class="p-5">
        <a href={href}>
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">{title}</h5>
        </a>
        <p class="mb-3 font-normal text-gray-400">{body}</p>
     
    </div>
</div>
