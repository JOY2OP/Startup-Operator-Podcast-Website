---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Subscribe to Newsletter">
<div class="bg-slate-900">
    <Navbar />
    <div class="grid text-center   mt-6 py-8 items-center">
        <h1 class=" text-5xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white ">
            <span class=" text-transparent bg-clip-text bg-gradient-to-r from-pink-500 via-red-500 to-yellow-500">
               Subscribe to <br class="lg:hidden">the Newsletter
            </span>
           
        </h1>
        
        <p class="text-center mb-4 mt-6 pt-4 text-3xl font-light text-gray-400 lg:text-3xl sm:px-16 mx-6 xl:px-48 dark:text-white">
            <span class="font-medium underline decoration-pink-500">Unleash</span> your startup potential
            with us. <br>
        </p>

        
        <div class="max-w-8xl mx-auto sm:px-6 lg:px-8 py-12">
            <div class="flex items-center justify-center  pb-4 rounded-lg">
                <div class="flex items-center space-x-4">
                    <input class="bg-white  rounded-lg text-base text-gray-800 p-4  border border-gray-300 sm:w-80 focus:outline-none focus:border-indigo-500" type="email" placeholder="Your Email" />
                    <button class="bg-indigo-600 rounded text-base font-medium text-white p-4 uppercase 
                    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Sub for $2
                    </button>
                </div>
            </div>
            
            <div class=" items-center justify-center bg-gray-800 p-8 rounded-lg">
                <ul class="text-left font-light leading-loose text-2xl text-gray-400 lg:text-2xl dark:text-white">
                    <!-- <ul class="text-left font-light leading-loose text-2lg lg:text-2xl  text-gray-400 dark:text-white space-y-2"> -->
                       
                    <li>✅ Actionable Insights</li>
                    <li>✅ Boost Your Growth</li>
                    <li>✅ Propel Your Success</li>
                    <li>✅ Unleash Your Potential</li>
                </ul>
            </div>
        </div>
        
		
    </div>
</div>
<Footer />
</Layout>

